<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adapters.ThirdActivity">

    <TextView
        android:id="@+id/tvNameColor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text=""

        />

    <TextView
        android:id="@+id/tvCodeColor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text=""

        />

    <Button
        android:id="@+id/btnColor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvBasic2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="287dp"
        android:layout_height="11dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tvNameColor"
        app:layout_constraintStart_toStartOf="@+id/tvNameColor"
        app:layout_constraintTop_toTopOf="@+id/tvNameColor" />

</androidx.constraintlayout.widget.ConstraintLayout>